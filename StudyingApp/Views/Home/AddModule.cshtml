@model StudyingApp.ViewModels.ModuleViewModel;
@{
    ViewData["Title"] = "AddModule";
}

<h1>AddModule</h1>

<form class="loginForm" method="post" enctype="multipart/form-data" asp-action="AddModule">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="ModuleName"></label>
        <input asp-for="ModuleName" type="text" class="form-control">
        <span asp-validation-for="ModuleName"></span>
    </div>
    <div class="form-check form-group">
        <input asp-for="IsTest" type="checkbox" class="form-check-input">
        <label asp-for="IsTest" class="form-check-label"></label>
    </div>
    <div class="form-check form-group">
        <input asp-for="IsLab" type="checkbox" class="form-check-input">
        <label asp-for="IsLab" class="form-check-label"></label>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input type="datetime-local" id="meeting-time"
               name="meeting-time" value="2020-02-08T19:30"
               min="2020-02-09T00:00" max="2025-02-09T00:00"
               class="form-control">
        <span asp-validation-for="Date"></span>
    </div>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Скасувати</button>
    <button type="submit" class="btn btn-success" asp-route-id="@ViewBag.CourseId">
        Зберегти
    </button>
</form>

