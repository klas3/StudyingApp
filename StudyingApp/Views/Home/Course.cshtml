@model StudyingApp.Models.Course

@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center m-5">@Html.DisplayFor(modelItem => modelItem.Name)</h1>
<div>
    <h3 class="p-3">Викладач:</h3>
    <p class="ml-3">@Html.DisplayFor(modelItem => Model.User.FirstName) @Html.DisplayFor(modelItem => Model.User.LastName)</p>
    <h3 class="p-3">Тривалість:</h3>
    <p class="ml-3">@Html.DisplayFor(modelItem => Model.StartDate) - @Html.DisplayFor(modelItem => Model.EndDate)</p>
    <h3 class="p-3">Список модулів:</h3>
    <div id="accordion">
        @{ int i = 1;}
        @foreach (var item in Model.Modules)
        {
        <div class="myDiv">
            <div class="card">
                <div class="card-header" id="headingThree_@i">
                    <h5 class="mb-0">
                        <button class="btn btn-link myButton90 btnTextLeft" data-toggle="collapse" data-target="#collapseThree_@i" aria-expanded="false" aria-controls="collapseThree_@i">
                            @Html.DisplayFor(modelItem => item.ModuleName)
                        </button>
                        <button type="button" class="btn btn-outline-warning myButton10" onclick="location.href='@Url.Action("AddModule", "Home")'">
                            Редагувати
                        </button>
                    </h5>
                </div>
                <div id="collapseThree_@i" class="collapse" aria-labelledby="headingThree_@i" data-parent="#accordion">
                    <div class="card-body">
                        @foreach (var task in item.Tasks)
                        {
                        <div class="mt-3">
                            <span class="taskType">@Html.DisplayFor(modelItem => task.Type) : </span>
                            <span>@Html.DisplayFor(modelItem => task.Descrition)</span>
                            <button type="button" class="btn btn-outline-success myButton10 rightButton" onclick="location.href='@Url.Action("AddMark", "Home")'">
                                Оцінити
                            </button>
                        </div>
                        }
                    </div>
                </div>

            </div>
            
        </div>
            i++;
        }
    </div>
    @if (User.IsInRole("Student") || User.IsInRole("Administrator"))
    {
        <form method="get" enctype="multipart/form-data" asp-action="AddModule" asp-controller="Home" asp-route-courseId="@Model.CourseId">
            <button type="submit" class="btn btn-info">
                Додати модуль
            </button>
        </form>
    }
</div>

