@model IEnumerable<StudyingApp.Models.Course>

@{
    ViewData["Title"] = "Courses";
    Layout = "_Layout";
}
<h1 class="text-center m-5">Курси</h1>

<div class="align-items-center m-5">
    @foreach (var item in Model)
    {
    <form asp-area="" asp-controller="Home" asp-action="Course" asp-route-id="@item.CourseId">
        <div class="mt-3">
            <button class="btn btn-primary text-center myButton90" type="submit">
                @Html.DisplayFor(modelItem => item.Name)
            </button>
            @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
            {
                <button type="button" class="btn btn-warning myButton10" onclick="location.href='@Url.Action("AddCourse", "Home")'">
                    Редагувати
                </button>
            }
            </div>
</form>
    }
    @if (User.IsInRole("Teacher") || User.IsInRole("Admin"))
    {

        <button type="button" class="btn btn-info mt-3" onclick="location.href='@Url.Action("AddCourse", "Home")'">
            Додати курс
        </button>
    }
    <div class="mt-3" id="tlkio" data-channel="StudyingAppTeam3" style="width:100%;height:400px;"></div>
</div>