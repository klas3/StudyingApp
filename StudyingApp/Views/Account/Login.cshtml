@model StudyingApp.ViewModels.LoginViewModel;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/authorization.css" />
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Вхід</h1>
    </div>
    <form class="loginForm" method="post" enctype="multipart/form-data" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Login"></label>
                <input asp-for="Login" type="text" class="form-control col-xs-4">
                <span asp-validation-for="Login"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control">
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-check">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-success">
                Login
            </button>
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Register", "Account")'">
                Register
            </button>
    </form>
</body>
</html>