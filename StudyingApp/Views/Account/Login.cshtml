@model StudyingApp.ViewModels.LoginViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/authorization.css" />
</head>
<body>
    <div class="text-center">
        <h1 class="display-4">Вхід</h1>
    </div>
    <form class="loginForm" method="post" enctype="multipart/form-data" asp-action="Login">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="email" class="form-control col-xs-4">
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-success">
            Login
        </button>
        <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Register", "Account")'">
            Register
        </button>
    </form>
</body>
</html>