@{
    ViewData["Title"] = "CreateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model StudyingApp.Models.Student

    <div class="text-center">
        <h1 class="display-4">Редагувати студента</h1>
    </div>
    <form method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="EditStudent">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="University"></label>
            <input asp-for="University" type="text" class="form-control col-xs-4">
            <span asp-validation-for="University"></span>
        </div>
        <div class="form-group">
            <label asp-for="Faculty"></label>
            <input asp-for="Faculty" type="text" class="form-control col-xs-4">
            <span asp-validation-for="Faculty"></span>
        </div>
        <div class="form-group">
            <label asp-for="UniversityCourse"></label>
            <select asp-for="UniversityCourse" class="form-control">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
            <span asp-validation-for="UniversityCourse"></span>
        </div>
        <div class="form-group">
            <label asp-for="Skills"></label>
            <textarea asp-for="Skills" wrap="hard" class="form-control"></textarea>
            <span asp-validation-for="Skills"></span>
        </div>
        <button type="submit" class="btn btn-success">
            Змінити
        </button>
    </form>